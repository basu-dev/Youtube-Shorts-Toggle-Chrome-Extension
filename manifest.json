{
  "name": "youtube-shorts-toggle",
  "description": "Youtube Shorts Toggle",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["src/content/index.ts"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "permissions": ["storage", "tabs"]
}
